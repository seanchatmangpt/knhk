graph TB
    subgraph RA["Region A (Primary)"]
        RA1["Hot Path (C)"]
        RA2["Warm Path (Rust)"]
        RA3["Cold Path (Erlang)"]
        RA1 --> RA2
        RA2 --> RA3
    end
    
    subgraph RB["Region B (Secondary)"]
        RB1["Hot Path (C)"]
        RB2["Warm Path (Rust)"]
        RB3["Cold Path (Erlang)"]
        RB1 --> RB2
        RB2 --> RB3
    end
    
    SYNC["Cross-Region Sync"]
    RA3 -->|sync| SYNC
    RB3 -->|sync| SYNC
    
